

jQuery(document).ready(function() {



    $('.gallery-item.col-sm-6 + .gallery-item.col-sm-6').each(function(index) {
          $(this).addClass('has2cols');
    });

    $('.gallery-item.col-sm-6.has2cols').each(function(index) {
        $(this).prev().addClass('has2colsFirst');
    });
    $('.gallery-item.col-sm-6').each(function(index) {
        $(this).addClass('col-sm-12');
    });
    $('.has2colsFirst.col-sm-12, .has2cols.col-sm-12').each(function(index) {
        $(this).removeClass('col-sm-12');
    });

    $('.gallery-item.col-sm-6.col-sm-12').each(function(index) {
        $(this).removeClass('col-sm-6');
    });


    $('.frame-type-textpic .detailProductContent').each(function(index) {
        $('.gallery-item.col-sm-12').addClass('col-md-4');
    });

    $('.frame-type-textpic .detailProductContent').each(function(index) {
        $(this).parents().eq(2).addClass('detailProductText');
    });


    


    $('.frame-type-textpic .detailProductText .textpic-item.textpic-text').appendTo('.detailProductContent .col-md-5');


    // $('.tab-v1 ul.nav-tabs a.nav-link.active').parent().addClass('active');
    $('.tab-v1 .tab-content > .active').removeClass('show');
    $('.tab-v1 .tab-content > .active').addClass('in');

    // open zonaInteres 2023 meniu
    $('.stage-wrapper .stage-active span.active').click(function() {
        $('.stages').slideToggle( "easy" );
    });


    // $('.close-container').parent().hide();

    $('.close-container').on('click', function() {
        $(this).parent().removeClass('in');
        $(this).parent().hide();

        $('#main-navigation').attr('style', 'min-height: 0px;');
    } );

});



$(document).ready(function() {   
    $(".toggle-more").click(function() {
        $(this).prev('.readmore-content').toggle('slow');
     });

});



