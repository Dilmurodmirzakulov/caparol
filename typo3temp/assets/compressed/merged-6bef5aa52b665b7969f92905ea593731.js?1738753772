    // $.urlParam('title');
    // console.log(decodeURIComponent($.urlParam('title')));
    // $('input#contactProduse-subject').attr('value',decodeURIComponent($.urlParam('title')));
    // $('input#contactProduseMoldova-subject').attr('value', decodeURIComponent($.urlParam('title')));
    // $('input#contactProduseBulgaria-subject').attr('value',decodeURIComponent($.urlParam('title')));

    // // if ($.urlParam('title')) {
    // //     // $("#formfield-c_email").focus();
	  // // }

    $.urlParam = function(name){
      var results = new RegExp('[\?&]' + name + '=([^&#]*)').exec(window.location.href);
      if (results == null){
          return null;
      }
      else{
          return decodeURIComponent(results[1]) || 0;
      }
    }
    
    var titleParam = $.urlParam('title');
    // console.log(decodeURIComponent(titleParam));
    // $('input#contactProduse-subject').attr('value', decodeURIComponent(titleParam));
    // $('input#contactProduseMoldova-subject').attr('value', decodeURIComponent(titleParam));
    // $('input#contactProduseBulgaria-subject').attr('value', decodeURIComponent(titleParam));

    // $('input#contactProduse-subject').attr('value', decodeURIComponent(titleParam));

    if ($('#contactProduseMoldova-24953-subject').length) {
      $('input#contactProduseMoldova-24953-subject').attr('value', decodeURIComponent(titleParam));
    }

    if ($('#contactProduseMoldova-subject').length) {
      $('input#contactProduseMoldova-subject').attr('value', decodeURIComponent(titleParam));
    }

    if ($('#input#contactProduseBulgaria-subject').length) {
      $('input#input#contactProduseBulgaria-subject').attr('value', decodeURIComponent(titleParam));
    }

    if ($('#contactProduse-24952-subject').length) {
      $('input#contactProduse-24952-subject').attr('value', decodeURIComponent(titleParam));
    }

    if ($('#contactProduseBulgaria-24957-subject').length) {
      $('input#contactProduseBulgaria-24957-subject').attr('value', decodeURIComponent(titleParam));
    }

    

});

