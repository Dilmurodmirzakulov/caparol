jQuery(document).ready(function() {

    $('.hero .carousel .item:first').addClass('active');
    $('.hero .carousel .carousel-indicators li:first').addClass('active');

	$('.gallery-item.col-sm-3.col-xs-6').each(function(){
		var el = $(this).find('figcaption');
		$(this).append('<figcaption class="caption">'+el.html()+'</figcaption>');
		el.remove();
	});

	// Add class active to first item from Carousel
    $('.carousel-inner .item:first-child:not(.active)').addClass('active');


    //put in img scr the data-src on mobile when lazy load not working
    var windowWidth = $(window).width();
    if(windowWidth < 780) {
    	$('figure img').each(function(){
    		var str = $(this).attr('src');
    		var ss = str.indexOf('blank.gif');

    		if(ss > 0) {
    			var dstr = $(this).attr('data-src');
    			$(this).attr('src', dstr);
    		}
    	});
    }


    $(".teaserProdus4Coloane .col-md-3.col-xs-6 .wrapper").each(function(){

      if ($.trim($(this).text()) == "" && $.trim($(this).html()) == ""){
        $(this).parent().remove();
      }
	});

	// $(".tx-gallery .carousel").carousel({interval: 3600, pause: "hover"});


	if ($('input#contactProduse-subject').length) {
		// $("input#contactProduse-subject").attr("disabled", true);
    }

	if ($('#contactProduse .btn.btn-primary').length) {
		$("#contactProduse .btn.btn-primary").removeClass('btn-primary').addClass('sendButton');
	}
	if ($('#solicitareinformatii .btn.btn-primary').length) {
		$("#solicitareinformatii .btn.btn-primary").removeClass('btn-primary').addClass('sendButton');
	}
	if ($('#solicitareInformatiiMoldova .btn.btn-primary').length) {
		$("#solicitareInformatiiMoldova .btn.btn-primary").removeClass('btn-primary').addClass('sendButton');
	}
	if ($('#contactProduseMoldova .btn.btn-primary').length) {
		$("#contactProduseMoldova .btn.btn-primary").removeClass('btn-primary').addClass('sendButton');
	}
	if ($('#contactProduseBulgaria .btn.btn-primary').length) {
		$("#contactProduseBulgaria .btn.btn-primary").removeClass('btn-primary').addClass('sendButton');
	}




//pentru inputfield name
  $('input#contactProduse-name, #contactProduse-text-1, #contactProduse-text-2, #contactProduse-message, input#solicitareinformatii-name, #solicitareinformatii-text-1, #solicitareinformatii-email, #solicitareinformatii-text-2, #solicitareinformatii-message, input#solicitareInformatiiMoldova-name, #solicitareInformatiiMoldova-text-1, #solicitareInformatiiMoldova-email, #solicitareInformatiiMoldova-text-2, #solicitareInformatiiMoldova-message, input#contactProduseMoldova-name, #contactProduseMoldova-text-1, #contactProduseMoldova-email, #contactProduseMoldova-text-2, #contactProduseMoldova-message, input#contactProduseBulgaria-name, #contactProduseBulgaria-text-1, #contactProduseBulgaria-email, #contactProduseBulgaria-text-2, #contactProduseBulgaria-message').on('change invalid', function() {
    var textfield = $(this).get(0);

    // 'setCustomValidity not only sets the message, but also marks
    // the field as invalid. In order to see whether the field really is
    // invalid, we have to remove the message first
    textfield.setCustomValidity('');

    if (!textfield.validity.valid) {
      textfield.setCustomValidity('Acest camp este obligatoriu');
    }
  });

  //pentru inputfield email
  $('#contactProduse-email').on('change invalid', function() {
    var textfield = $(this).get(0);

    // 'setCustomValidity not only sets the message, but also marks
    // the field as invalid. In order to see whether the field really is
    // invalid, we have to remove the message first
    textfield.setCustomValidity('');

    if (!textfield.validity.valid) {
      textfield.setCustomValidity('Completati campul cu o adresa de email valida');
    }
  });

  // $('.has-error:lang(ro)').addClass('TESSSST');


  var html = '<span class="error help-block" role="alert">Please enter a valid email address<br></span>';
  // console.log(html);

  var $html = $('<span />',{html:html});
  var $htmlbg = $('<span />',{html:html});
  // replace "Headline" with "whatever" => Doesn't work
  $html.find('span').html("Completati campul cu o adresa de email valida");
  $htmlbg.find('span').html("Completati campul cu o adresa de email valida (BG)");

  $('.error.help-block:lang(ro)').html( $html.html() );
  $('.error.help-block:lang(bg)').html( $htmlbg.html() );

  // console.log($html.html());



  $('#contactProduse-linkedcheckbox-1').on('change invalid', function() {
    console.log('aa');
    var textfield = $(this).get(0);
    textfield.setCustomValidity('');

    if (!textfield.validity.valid) {
      textfield.setCustomValidity('Acest buton trebuie sa fie validat');
    }
});




//Traducere formulare mesaje

$('input#contactProduse-name:lang(bg), #contactProduse-text-1:lang(bg), #contactProduse-text-2:lang(bg), #contactProduse-message:lang(bg), input#solicitareinformatii-name:lang(bg), #solicitareinformatii-text-1:lang(bg), #solicitareinformatii-email:lang(bg), #solicitareinformatii-text-2:lang(bg), #solicitareinformatii-message:lang(bg), input#solicitareInformatiiMoldova-name:lang(bg), #solicitareInformatiiMoldova-text-1:lang(bg), #solicitareInformatiiMoldova-email:lang(bg), #solicitareInformatiiMoldova-text-2:lang(bg), #solicitareInformatiiMoldova-message:lang(bg), input#contactProduseMoldova-name:lang(bg), #contactProduseMoldova-text-1:lang(bg), #contactProduseMoldova-email:lang(bg), #contactProduseMoldova-text-2:lang(bg), #contactProduseMoldova-message:lang(bg), input#contactProduseBulgaria-name:lang(bg), #contactProduseBulgaria-text-1:lang(bg), #contactProduseBulgaria-email:lang(bg), #contactProduseBulgaria-text-2:lang(bg), #contactProduseBulgaria-message').on('change invalid', function() {
  var textfield = $(this).get(0);

  // 'setCustomValidity not only sets the message, but also marks
  // the field as invalid. In order to see whether the field really is
  // invalid, we have to remove the message first
  textfield.setCustomValidity('');

  if (!textfield.validity.valid) {
    textfield.setCustomValidity('Acest camp este obligatoriu (BG)');
  }
});



$('#contactProduseBulgaria-linkedcheckbox-1').on('change invalid', function() {
  console.log('aa');
